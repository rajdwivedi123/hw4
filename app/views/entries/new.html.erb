<h1 class="mb-4">New Entry</h1>

<% if @place %>
  <form action="/entries" method="post" class="card card-body" enctype="multipart/form-data">
    <input type="hidden" name="place_id" value="<%= @place["id"] %>">

    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="title" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <input type="text" name="description" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Occurred On</label>
      <input type="date" name="occurred_on" class="form-control">
    </div>

    <div class="mb-3">
      <label class="form-label">Attach Image</label>
      <input type="file" name="image" class="form-control">
    </div>

    <button type="submit" class="btn btn-success">Save Entry</button>
  </form>

  <p class="mt-3">
    <a href="/places/<%= @place["id"] %>" class="btn btn-secondary">Back to Place</a>
  </p>
<% else %>
  <p class="text-danger">You cannot add an entry here.</p>
  <a href="/places" class="btn btn-secondary">Back to Places</a>
<% end %>
