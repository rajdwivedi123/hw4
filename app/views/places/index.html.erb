<h1 class="mb-4">Your Places</h1>

<% if @places.present? %>  <!-- âœ… Using .present? prevents nil errors -->
  <div class="row g-3">
    <% for place in @places %>
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">
              <a href="/places/<%= place["id"] %>" class="text-decoration-none">
                <%= place["name"] %>
              </a>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-muted">You haven't added any places yet.</p>
<% end %>

<p class="mt-4">
  <a href="/places/new" class="btn btn-primary">New Place</a>
</p>
