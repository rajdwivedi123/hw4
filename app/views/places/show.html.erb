<% if @place %>
  <h1 class="mb-4"><%= @place["name"] %></h1>

  <h2>My Entries</h2>

  <% if @entries.any? %>
    <div class="row g-3">
      <% for entry in @entries %>
        <div class="col-md-4">
          <div class="card shadow-sm">
            <% if entry.image.attached? %>
              <img src="<%= url_for(entry.image) %>" class="card-img-top" alt="Entry Image">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= entry["title"] %></h5>
              <h6 class="text-muted"><%= entry["occurred_on"] %></h6>
              <p class="card-text"><%= entry["description"] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No entries yet.</p>
  <% end %>

  <p class="mt-3">
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </p>

  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
<% else %>
  <p class="text-danger">This place does not exist or you do not have permission to view it.</p>
  <a href="/places" class="btn btn-secondary">Back to Places</a>
<% end %>
